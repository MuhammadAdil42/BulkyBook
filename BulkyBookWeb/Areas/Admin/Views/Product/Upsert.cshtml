@model BulkyBook.Models.ViewModels.ProductVM   

<div class="container mt-5 p-3 border border-success">
    <div class="row">
        <h3>Create Product</h3>
    </div>
    <div class="text-danger" asp-validation-summary="All"></div>
    <form method="post">
        <div class="row mt-3 p-3">
            <label class="form-label" asp-for="product.Title"></label>
            <input class="form-control" asp-for="product.Title" />
            <span asp-validation-for="product.Title" class="text-danger"></span>
        </div>

        <div class="row mt-3 p-3">
            <label class="form-label" asp-for="product.Description"></label>
            <textarea class="form-control" rows="3" asp-for="product.Description"></textarea>
            <span asp-validation-for="product.Description" class="text-danger"></span>
        </div>

        <div class="row mt-3 p-3">
            <label class="form-label" asp-for="product.ISBN"></label>
            <input class="form-control" asp-for="product.ISBN" />
            <span asp-validation-for="product.ISBN" class="text-danger"></span>
        </div>
        <div class="row mt-3 p-3">
            <label class="form-label" asp-for="product.Author"></label>
            <input class="form-control" asp-for="product.Author" />
            <span asp-validation-for="product.Author" class="text-danger"></span>
        </div>
        <div class="row mt-3 p-3">
            <label class="form-label" asp-for="product.ListPrice"></label>
            <input class="form-control" asp-for="product.ListPrice" />
            <span asp-validation-for="product.ListPrice" class="text-danger"></span>
        </div>
        <div class="row mt-3 p-3">
            <label class="form-label" asp-for="product.Price"></label>
            <input class="form-control" asp-for="product.Price" />
            <span asp-validation-for="product.Price" class="text-danger"></span>
        </div>
        <div class="row mt-3 p-3">
            <label class="form-label" asp-for="product.Price50"></label>
            <input class="form-control" asp-for="product.Price50" />
            <span asp-validation-for="product.Price50" class="text-danger"></span>
        </div>
        <div class="row mt-3 p-3">
            <label class="form-label" asp-for="product.Price100"></label>
            <input class="form-control" asp-for="product.Price100" />
            <span asp-validation-for="product.Price100" class="text-danger"></span>
        </div>
        <div class="row mt-3 p-3">
            <label class="form-label" asp-for="product.CategoryId"></label>
            <select class="form-select" asp-for="product.CategoryId" asp-items="@Model.CategoryList as IEnumerable<SelectListItem>">
                <option disabled selected>--Select Category--</option>
            </select>
           
            <span asp-validation-for="product.CategoryId" class="text-danger"></span>
        </div>
        <div class="row mt-3 p-3">
            <label class="form-label" asp-for="product.CoverTypeId"></label>
            <select class="form-select" asp-for="product.CoverTypeId" asp-items="@Model.CoverTypeList as IEnumerable<SelectListItem>">
                <option disabled selected>--Select CoverType--</option>
            </select>
            <span asp-validation-for="product.CoverTypeId" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success me-3" style="width:100px;">Update</button>
        <button class="btn btn-info" style="width:100px;" asp-controller="Product" asp-action="Index">Back</button>
    </form>
</div>

@section Scripts
    {
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}
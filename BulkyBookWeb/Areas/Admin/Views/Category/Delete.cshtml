@model Category

<form method="post" asp-action="Delete">
    <div class="border border-success p-3 mt-3" style="border-width:medium !important;">
        <div class="p-2 p-2">
            <h2 class="row text-success ">Delete Category</h2>
            @* <div asp-validation-summary="All"></div> *@
            <div class="mt-3 row">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for="Name" class="form-control bg-transparent border-dark" readonly>
            </div>
            <div class="mt-3 row">
                <label asp-for="DisplayOrder" class="form-label">Display Order</label>
                <input asp-for="DisplayOrder" class="form-control bg-transparent border-dark" readonly>
            </div>
            <div class="row mt-3">
                <button class="form-control bg-success me-3" style="width:150px;">Remove</button>
                <button class="form-control bg-info" style="width:150px;" asp-controller="Category" asp-action="Index">Back</button>
            </div>
        </div>

    </div>
</form>